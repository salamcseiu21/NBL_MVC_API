
@using NBL.Models.EntityModels.Deliveries
@model IEnumerable<ReceiveProductViewModel>
@{
    ViewBag.Title = "Receive";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";

}

<section class="content">

    <h3 class="text-center" style="margin-top: 0; text-transform: uppercase;color: green">Product Receiveable List</h3>
    <table class="display table-bordered table-hover table-responsive" id="table_receivable_list" style="border: 1px solid black">
        <thead>
        <tr>
            <th>
                Reference
            </th>
            <th>
                Qty
            </th>
            <th class="text-center">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
      @foreach (IGrouping<long,ReceiveProductViewModel> item in Model.GroupBy(n=>n.TripId))
      {
          <tr>
              
              <td>@item.Key</td>
              <td>@item.Sum(n=>n.Quantity)</td>
              <td class="text-center">
                  @Html.ActionLink("Details","ReceiveableDetails",new {id=item.Key},new {@class="btn btn-info"})
              </td>
          </tr>
      }
        </tbody>
        
        <tfoot>
        <tr>
                        <th>
                Reference
            </th>
            <th>
                Qty
            </th>
            <th class="text-center">
                Action
            </th>
        </tr>
        </tfoot>
    </table>
    
</section>
    
@section Scripts
{ 
    <script>
        $("#table_receivable_list").DataTable();
    </script>
}
