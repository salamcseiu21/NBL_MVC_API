@model NBL.Models.ViewModels.Productions.ScanProductViewModel
@{
    ViewBag.Title = "Save Product";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section style="margin: 10px">


    <div class="col-md-6 col-md-offset-3" style="border: 1px solid;">
        @using (Html.BeginForm("SaveProductToFactoryInventory","Product",FormMethod.Post,new {id= "scanProductBarcodeForm" }))
        {
            <div class="form-horizontal">
                <h3 class="text-center text-green">Scan Product</h3>
                <div id="message" style="display:none;font-weight:bold;font-size:20px" class="text-center">
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProductCode, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control", placeholder = "Alwasy keep pointer here..!!", autofocus = "" , onchange = "SaveScannedBarcodeToTextFile(this)"})
                        @Html.ValidationMessageFor(m => m.ProductCode, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        <input type="button" value="Save" class="btn btn-success" onclick="SaveProductToFactoryInventory()"/>
                    </div>
                </div>
            </div>
        }
       
        <table class="display table-responsive table-bordered table-hover" id="production_list" style="border: 1px solid">
            <caption class="text-center">
                Scaned Product List 
            </caption>
            <thead>
           
            <tr>
                <th>
                    Product Barcode
                </th>
                <th>
                    Product Name
                </th>
            </tr>
            </thead>

        </table>
    </div>
</section>

@section scripts{
    
<script src="~/Areas/Factory/Scripts/loadAllScannedProducts.js"></script>
    <script>
        function SaveScannedBarcodeToTextFile(btnClicked) {
            var $form = $(btnClicked).parents('form');
            $.ajax({
                type: "POST",
                url: RootUrl + 'factory/product/AddProductToTempFile',
                data: $form.serialize(),
                error: function (xhr, status, error) {
                    alert(error);
                },
                success: function (response) {
                    var result = response.Message;
                    //alert("Saved Successfully");
                    $('#message').html(response).fadeIn('slow');
                    $('#message').html(result).fadeIn('slow'); //also show a success message
                    $('#message').delay(700).fadeOut('slow');
                    loadAllScannedProducts();
                    $('#scanProductBarcodeForm').trigger("reset");
                }
            });
        }
    </script>
    <script>
        window.onload = function () {
            loadAllScannedProducts();
        };
    </script>
    
    <script>
        function SaveProductToFactoryInventory() {
            if (confirm("Are you sure to Save?")) {
                $("#scanProductBarcodeForm").submit();
            } else {
                return false;// if it's a link to prevent post
            }
        }
    </script>
}